<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.MenuInicioActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:layout_marginTop="100px"
        android:layout_marginRight="20px"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnTomarAsistencia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4c2882"
            android:text="Tomar Asistencia en Puerta"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnEmpleados"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4c2882"
            android:text="Empleados"
            android:textAllCaps="false"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btntipoDoc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4c2882"
            android:text="Tipos de documentos"
            android:textAllCaps="false"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnAsistencia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4c2882"
            android:text="Asistencia"
            android:textAllCaps="false"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btntareo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4c2882"
            android:text="Tareo"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>