<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    tools:context=".Vista.ui.gallery.BusquedaProveedorGuiaActivity">

    <LinearLayout
        android:id="@+id/llAppBarJC"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="5dp">

        <ImageButton
            android:id="@+id/btnCerrarBusquedaProductos"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_back_gris"/>


        <SearchView
            android:id="@+id/txtBuscarProductos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:queryHint="Buscar trabajadores"
            android:queryBackground="@android:color/transparent"
            android:iconifiedByDefault="false"
            android:searchHintIcon="@null"
            android:inputType="textCapCharacters"
            android:searchIcon="@null" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBusquedaClientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"/>

</LinearLayout>